<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"/>

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="523dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:hint="."
        android:text="@string/editTextMessage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLog"

        android:backgroundTint="@color/button_color"
        tools:text="@string/buttonLog" />

    <Button
        android:id="@+id/buttonToast"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="@string/buttonToast" />

    <Button
        android:id="@+id/buttonRewrite"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:text="@string/buttonRewrite" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewRewriteText"
        android:id="@+id/textViewRewriteText"/>

</LinearLayout>